<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    app:cardElevation="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/logoimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_me_white_logo" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <TextView
                android:textStyle="normal"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-45dp"
                android:background="@color/colorRed"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textStyle="normal"
                    android:id="@+id/tv_login_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="LOGIN"
                    android:textAlignment="center"
                    android:textColor="@color/colorRed"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:textStyle="normal"
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="Email"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <EditText
                        android:textStyle="normal"
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp" />

                    <TextView
                        android:textStyle="normal"
                        android:id="@+id/tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="3dp"
                        android:text="Password"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <EditText
                        android:textStyle="normal"
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="16sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/button_ripple_b"
                        android:elevation="8dp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />

                    <TextView
                        android:textStyle="normal"
                        android:id="@+id/tv_forgot_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bt_login"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/layout_ripple"
                        android:clickable="true"
                        android:padding="6dp"
                        android:text="Forgot Password"
                        android:textAlignment="center"
                        android:textColor="@color/colorRed"
                        android:textSize="14sp" />

                    <TextView
                        android:textStyle="normal"
                        android:id="@+id/tv_or"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_forgot_pass"
                        android:layout_marginTop="6dp"
                        android:text="OR"
                        android:textAlignment="center"
                        android:textColor="@color/colorRed"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/bt_fb"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_or"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_fb_ripple"
                        android:elevation="8dp"
                        android:text="Login with Facebook"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/bt_fb"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_gmail_ripple"
                        android:elevation="8dp"
                        android:text="Login with Gmail"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:textStyle="normal"
                    android:id="@+id/tv_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/layout_ripple"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="Don't have an account ? Sign Up"
                    android:textAlignment="center"
                    android:textColor="@color/colorRed"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/tv_review_date"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_review_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rb_review_number"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/yellow"
                android:rating="5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/tv_review_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The demo "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_10"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Nov 20 2018"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_margin="6dp"
        android:background="@color/gray_g" />
</LinearLayout>